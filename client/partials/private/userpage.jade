
div(ng-controller="userPageCtrl" class="loginPage")
  form(class="loginForm" ng-repeat="user in users" layout="column") 
    #login.inputItem.login {{user.username}}
    md-input-container(class="inputItem")
      md-select(name='status' id='status' ng-model='user.active' aria-label="Select user status")
        md-option(value="true") Active
        md-option(value="false") Disabled
    md-button(class="inputItem md-raised md-primary" ng-click="openCardUpdate()") Update Credit Info
