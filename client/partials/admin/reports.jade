div(ng-controller="adminReportCtrl")

  table(st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped")
    thead
      tr
        th(st-sort="username") Username
        th(st-sort="toolName") Tool Name
        th(st-sort="issue") Issue
        th(st-sort="delete") Delete Issue

    tbody
      tr(ng-repeat="issue in issues")
        td {{issue.username}}
        td {{issue.toolName}}
        td {{issue.issueReport}}
        td
          md-button(ng-click="removeItem(issue)" class="md-raised md-warn") Del
