article(class="loginPage" ng-controller="createOtherUser")
    header
        div(class="login register")
            #login Add a Helper or Admin
    form(class="registrationForm")
      md-input-container(class="inputItem")
        label(for="username") Username
        input(name="username" ng-model="user.username" type="text" id="username" pattern="^[a-zA-Z0-9!@](_(?!(\.|_))|\.(?!(_|\.))|[a-zA-Z0-9]){4,18}[a-zA-Z0-9]$")
      md-input-container(class="inputItem")
        label(for="firstname") First Name
        input(name="firstname" ng-model="user.first_name" type="text" id="firstname" pattern="([a-zA-Z]{2,30}\s*)+")
      md-input-container(class="inputItem")
        label(for="lastname") Last Name
        input(name="lastname" ng-model="user.last_name" type="text" id="lastname" pattern="[a-z A-Z]{2,30}")
      md-input-container(class="inputItem")
        label(for="email") Email Address
        input(name="email" ng-model="user.email" type="email" id="email")
      md-input-container(class="inputItem")
        label(for="mobile") Phone Number
        input(name="mobile" ng-model="user.mobile" type="tel" id="mobile" pattern="[0-9]{10}")
      md-input-container(class="inputItem")
        label(for="password") Password
        input(name="password" ng-model="user.password" type="password" id="password")
      md-input-container(class="inputItem")
        label(for="verifypassword") Type that Password Again
        input(name="verifypassword" ng-model="user.verifypassword" type="password" id="verifypassword" is-match="user.password")
        p(class="warning md-button" ng-show="regForm.conPass.$error.isMatch && visitedConfirm") Passwords must match
      md-input-container(class="inputItem")
        label(for='accountType') Account Type
        md-select(name='accountType' id='accountType' ng-model='user.accountType' aria-label="Select type account")
          md-option(value="admin") Admin
          md-option(value="helper") Helper
      md-input-container(class="inputItem")
        md-button(id="loginBtn" class="loginBtn md-button md-raised md-primary" ng-click="newUser()") Create
